<Window x:Class="ProjektSklep.ShippingDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dane do przesyłki"
        Height="300"
        Width="400"
        WindowStyle="None"
        ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Kraj:" Grid.Row="0"/>
        <TextBox Name="countryTextBox" Grid.Row="0" Margin="5" Text="Wpisz kraj"/>

        <Label Content="Miasto:" Grid.Row="1"/>
        <TextBox Name="cityTextBox" Grid.Row="1" Margin="5" Text="Wpisz miasto"/>

        <Label Content="Ulica:" Grid.Row="2"/>
        <TextBox Name="streetTextBox" Grid.Row="2" Margin="5" Text="Wpisz ulicę"/>

        <Label Content="Numer kodu pocztowego:" Grid.Row="3"/>
        <TextBox Name="postalCodeTextBox" Grid.Row="3" Margin="5" Text="Wpisz kod pocztowy"/>

        <Button Content="Zamów" Grid.Row="4" Click="PlaceOrderButton_Click" Margin="5"/>
        <Button Content="Zamknij" Grid.Row="5" Click="CloseShippingWindow_Click" Margin="5"/>

    </Grid>
</Window>
